<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HomieMap.Button" parent="Widget.MaterialComponents.Button">
        <item name="shapeAppearance">@style/ShapeAppearance.HomieMap.Button</item>
    </style>

    <style name="ShapeAppearance.HomieMap.Button" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">30dp</item>
    </style>

    <style name="HomieMap.FloatingButton" parent="Widget.MaterialComponents.FloatingActionButton">

        <item name="enforceMaterialTheme">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="maxImageSize">30dp</item>
        <item name="fabCustomSize">52dp</item>
        <item name="elevation">0dp</item>

        <item name="backgroundTint">@color/white</item>
        <item name="tint">@color/blue</item>
    </style>

    <style name="TextAppearance.LargeBold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.LargeThin" parent="TextAppearance.AppCompat">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.MediumBold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.SmallBold" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextAppearance.SmallThin" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>